<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="lt.kvk.i12.auryla.dovydas.challengesnap">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="lt.kvk.i12.auryla_dovydas.challengesnap.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="lt.kvk.i12.auryla_dovydas.challengesnap.RegisterActivity"
                  android:label="Register Here"
                  android:parentActivityName="lt.kvk.i12.auryla_dovydas.challengesnap.LoginActivity"/>

        <activity android:name="lt.kvk.i12.auryla_dovydas.challengesnap.UserAreaActivity"
           />

        <activity android:name="lt.kvk.i12.auryla_dovydas.challengesnap.ChallengeActivity"
            android:label="Choose Challenge"
            android:parentActivityName="lt.kvk.i12.auryla_dovydas.challengesnap.UserAreaActivity"/>

        <activity android:name="lt.kvk.i12.auryla_dovydas.challengesnap.UploadImageActivity"
            android:label="Upload Image"
            android:parentActivityName="lt.kvk.i12.auryla_dovydas.challengesnap.ChallengeActivity"/>

        <activity android:name="lt.kvk.i12.auryla_dovydas.challengesnap.ResultActivity"
            android:label="Your Results"
            android:parentActivityName="lt.kvk.i12.auryla_dovydas.challengesnap.UserAreaActivity"/>

        <activity android:name="lt.kvk.i12.auryla_dovydas.challengesnap.RetrieveImageActivity"
                  android:label="Uploaded Photos"
                  android:parentActivityName="lt.kvk.i12.auryla_dovydas.challengesnap.UserAreaActivity"/>

        <activity android:name="lt.kvk.i12.auryla_dovydas.challengesnap.AboutActivity"
            android:label="About"
            android:parentActivityName="lt.kvk.i12.auryla_dovydas.challengesnap.UserAreaActivity">

        </activity>

    </application>

</manifest>