<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="3">

                <TextView
                    android:layout_height="100dp"
                    android:layout_columnWeight="1"
                    android:layout_rowSpan="2"
                    android:layout_rowWeight="1"
                    android:background="#000000"
                    android:gravity="center"
                    android:paddingLeft="25dp"
                    android:text="about"
                    android:textAlignment="center"
                    android:textColor="@android:color/background_light"
                    android:textSize="40sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_height="100dp"
                    android:layout_columnWeight="1"
                    android:layout_rowSpan="2"
                    android:layout_rowWeight="1"
                    android:background="#000000"
                    android:gravity="center"
                    android:text="CHALLENGE SNAP"
                    android:textAlignment="center"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/twFirst"
                    android:layout_columnWeight="1"
                    android:layout_rowSpan="2"
                    android:layout_rowWeight="1"
                    android:paddingLeft="25dp"
                    android:background="#000000"
                    android:textColor="@android:color/background_light"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/twSecond"
                    android:layout_columnWeight="1"
                    android:layout_rowSpan="2"
                    android:layout_rowWeight="1"
                    android:background="#000000"
                    android:textColor="@android:color/background_light"
                    android:textSize="18sp" />

                <TextView
                    android:layout_height="5dp"
                    android:layout_columnSpan="2"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:background="#000000"
                    android:paddingLeft="25dp"
                    android:text="User guide"
                    android:textColor="@android:color/background_light"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_columnSpan="2"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:background="#000000"
                    android:paddingLeft="25dp"
                    android:text="User guide (steps)"
                    android:textColor="@android:color/background_light"
                    android:textSize="36sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_columnSpan="2"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:background="#000000"
                    android:paddingLeft="25dp"
                    android:textColor="@android:color/background_light"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_columnSpan="2"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:background="#000000"
                    android:paddingLeft="25dp"
                    android:text="1. Go to challenges page:"
                    android:textColor="@android:color/background_light"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_height="wrap_content"
                    android:layout_columnSpan="2"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:src="@drawable/chall"
                    android:background="#000000"
                    android:paddingLeft="25dp"
                    android:text="1. Create your account"
                    android:textColor="@android:color/background_light"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_columnSpan="2"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:background="#000000"
                    android:paddingLeft="25dp"
                    android:text="2. Select challenge you want and press accept:"
                    android:textColor="@android:color/background_light"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_height="wrap_content"
                    android:layout_columnSpan="2"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:src="@drawable/acept"
                    android:background="#000000"
                    android:paddingLeft="25dp"
                    android:text="1. Create your account"
                    android:textColor="@android:color/background_light"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_columnSpan="2"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:background="#000000"
                    android:paddingLeft="25dp"
                    android:text="3. Select image from photo gallery, give a name and upload picture:"
                    android:textColor="@android:color/background_light"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_height="wrap_content"
                    android:layout_columnSpan="2"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:src="@drawable/upload"
                    android:background="#000000"
                    android:paddingLeft="25dp"
                    android:text="1. Create your account"
                    android:textColor="@android:color/background_light"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_columnSpan="2"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:background="#000000"
                    android:paddingLeft="25dp"
                    android:text="4. View your results:"
                    android:textColor="@android:color/background_light"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <ImageView
                android:layout_height="wrap_content"
                android:layout_columnSpan="2"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:src="@drawable/resultss"
                android:background="#000000"
                android:paddingLeft="25dp"
                android:text="1. Create your account"
                android:textColor="@android:color/background_light"
                android:textSize="30sp"
                android:textStyle="bold" />

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_columnSpan="2"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:background="#000000"
                    android:paddingLeft="25dp"
                    android:text="4. View uploaded photos:"
                    android:textColor="@android:color/background_light"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_height="wrap_content"
                    android:layout_columnSpan="2"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:src="@drawable/imageresults"
                    android:background="#000000"
                    android:paddingLeft="25dp"
                    android:text="1. Create your account"
                    android:textColor="@android:color/background_light"
                    android:textSize="30sp"
                    android:textStyle="bold" />

            </GridLayout>


        </LinearLayout>

    </ScrollView>
</LinearLayout>

